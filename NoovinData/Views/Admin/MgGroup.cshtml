@model IEnumerable<NoovinData.Models.Domin.Group>

@{
    ViewBag.Title = "مدیریت گروه ها";
    Layout = "~/Views/Shared/_Profile.cshtml";
}

<div class="part_left">

    <div id="product_list" class="userpanel_bright_section">
        <h1 class="separator">لیست گروهای سایت</h1>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-info">
                <a class="close" style="cursor:pointer;" onclick="$('.alert').hide()">×</a>
                @ViewBag.Error
            </div>
        }

        @Html.ActionLink("گروه جدید", "AddGroup", new { @style = "" }, new { @class = "button threed_button" })

        @if (Model.Count() > 0)
        {
            <div class="table_style1">

                <table>

                    <thead>
                        <tr>

                            <th>
                                تصویر گروه
                            </th>
                            <th>
                                نام گروه
                            </th>
                            <th>
                                ویرایش
                            </th>
                            <th>
                                حذف
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    <img src="~/Content/_images/Group/@item.Group_Pic" style="background-color: #13B1BC;" alt="@item.Group_Name" width="50" height="50" />
                                </td>
                                <td>
                                    @item.Group_Name

                                </td>

                                <td>
                                    @Html.ActionLink(" ", "EditGroup", new { id = item.Group_ID }, new { @class = "fa fa-edit", style = "color:blue; font-size:19px;" })

                                </td>
                                <td>

                                    @Html.ActionLink(" ", "RemoveGroup", new { id = item.Group_ID }, new { @class = "fa fa-trash-o", style = "color:red; font-size:19px;", onclick = "return confirm('آیا از حذف این گروه مطمئا هستید؟');" })

                                </td>
                            </tr>


                        }
                    </tbody>


                </table>


            </div>
        }
        else
        {
            <div class="table_style1">
                <table>
                    <thead>
                        <tr>
                            <th>
                                نام گروه
                            </th>
                            <th>
                                ویرایش
                            </th>
                            <th>
                                حذف
                            </th>
                        </tr>
                    </thead>

                    <tbody>

                        <tr><td colspan="9"><div class="noitem">گروهی برای نمایش موجود نیست.</div></td></tr>
                    </tbody>
                </table>
            </div>
        }



    </div>


    <script>

        $(function () {
            $("[data-hide]").on("click", function () {
                $("." + $(this).attr("data-hide")).hide();
                // -or-, see below
                // $(this).closest("." + $(this).attr("data-hide")).hide();
            });
        });
    </script>
    <link href="~/Content/_css/alert.css" rel="stylesheet" />
</div>
