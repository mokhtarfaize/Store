    }

    .list-group-item.active .list-group-item-text, .list-group-item.active:focus .list-group-item-text, .list-group-item.active:hover .list-group-item-text {
        color: #C7DDEF;
    }

    .list-group-item-text {
        margin-bottom: -1px;
        line-height: 1.3;
        text-align: right;
