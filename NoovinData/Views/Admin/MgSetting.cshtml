@model NoovinData.Models.Domin.Setting
@using NoovinData.Models.Plugin
@{
    ViewBag.Title = "تنظمیات سایت";
    Layout = "~/Views/Shared/_Profile.cshtml";
}

<link href="~/Content/_css/alert.css" rel="stylesheet" />
<div class="part_left">

    <div id="product_list" class="userpanel_bright_section">
        <h1 class="separator">تنظیمات </h1>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-info">
                <a class="close" style="cursor:pointer;" onclick="$('.alert').hide()">×</a>
                @ViewBag.Error
            </div>
        }

        <div class="bs-example" data-example-id="list-group-disabled">
            <div class="list-group">
                <a href="#" class="list-group-item active">
                    <h4 class="list-group-item-heading"> اس ام تی پی ایمیل :</h4>
                    <p class="list-group-item-text" >@Html.DisplayFor(model => model.Smtp)</p>
                </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">  رمز عبور  :</h4>
                    <p class="list-group-item-text"> @Html.DisplayFor(model => model.Password)</p>
                </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">    پست الکترونیک  :</h4>
                    <p class="list-group-item-text"> @Html.DisplayFor(model => model.Email)</p>
                </a>

                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">   تخفیف مناسبتی :</h4>
                    <p class="list-group-item-text"> @Html.DisplayFor(model => model.Discount)</p>
                </a>

                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">   کلمات کلیدی :</h4>
                    <p class="list-group-item-text"> @Html.DisplayFor(model => model.Keyword)</p>
                </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">   توضیح مختصر :</h4>
                    <p class="list-group-item-text">

                        @Html.DisplayFor(model => model.Descrption)
                    </p>
                </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading"> توضیح صفحه :</h4>
                    <p class="list-group-item-text">
                        @Html.DisplayFor(model => model.DescSite)
                    </p>
                </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">   عنوان صفحه :</h4>
                    <p class="list-group-item-text">@Html.DisplayFor(model => model.TitleSite)</p>
                </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">  تعداد محصول در صفحه :</h4>
                    <p class="list-group-item-text"> @Html.DisplayFor(model => model.PageCount)</p>
                </a>
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">    اخرین زمان پاکسازی :</h4>
                    <p class="list-group-item-text"> @PersianDateExtensionMethods.ToPeString(Model.DateDeleteBill, "yyyy/MM/dd")</p>
                </a>

            </div>
        </div>

        <p>
            @Html.ActionLink("ویرایش", "EditSetting", new { id = Model.Setting_ID }, new { @style = "background-color: #71E0A9;width:200px;padding: 10px;border: 2px solid #80E481;border-radius: 15px;color: white;margin-right: 220px;" })

        </p>
    </div>
</div>

<style>
    .bs-example {
        margin-right: 0px;
        margin-left: 0px;
    }

    .bs-example {
        position: relative;
        padding: 2px 15px 15px;
